/* pages/details/details.wxss */
 @import '../../parse/index.wxss';
page{
  background: #F5FAFF;
}
.wide{
  background: #F5FAFF;
  padding: 40rpx;
  box-sizing: border-box;
  padding-bottom: 172rpx;
}
.top-title{
  color: #052E47;
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold
}
.top-xinxi{
  margin-top: 22rpx;
  color: #999999;
  font-size: 24rpx;
}
.top-from{
  margin-right: 40rpx;
}
.main-content{
  margin-top: 40rpx;
}
.core{
  padding:18rpx 22rpx 22rpx 28rpx;
  font-family:PingFangSC-Semibold;
  color: #052E47;
  font-size: 32rpx;
  line-height: 52rpx;
  background:#EBF5FF;
}
.core-tip{
  font-weight: bold
}
.main-content image{
  width: 100%;
  margin-top: 30rpx;
}
.content{
  font-size: 32rpx;
   color: #333; 
  line-height: 52rpx;
}
.relay{
  background: #004078;
  color: #fff;
  width: 89%;
  border-radius: 20rpx;
  font-size: 36rpx;
  position: fixed;
  bottom: 80rpx;
  left: 0;
  right: 0;
  margin: auto;
  padding: 0;
}
.relay image{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle
}
.load{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.load image{
  width: 100%;
  height: 100%;
}