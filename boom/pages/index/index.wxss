pgae{
  background:rgba(245,250,255,1);
  background-size:100% 100%;
  background-color:#000;
}
.bg_topground,.p2p_click{
  display:flex;
  flex-direction:row;
  justify-content:center;
}
.bg_topground{
  width:100%;
  height:300rpx;
  background:url('https://test-baolei-api.xiaositv.com/images/baolei/bjt.png');
