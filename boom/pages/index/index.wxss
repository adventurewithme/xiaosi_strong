  align-items:center;
  width:600rpx;
  height:72rpx;
  background:rgba(255,255,255,1);
  margin-top:74rpx;
  box-shadow:0px 2rpx 8rpx 0rpx rgba(0,0,0,0.1);
  border-radius:36rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  color:rgba(181,188,198,1);
