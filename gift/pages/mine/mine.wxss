/* pages/mine/mine.wxss */
@import "../../templates/auth/auth.wxss";
.main{
  background:#F4F4F4;
  height: 100vh;
}
.header{
  width:100%;
  height:140rpx;
  background: #DC5147;
}
.header>view:first-child{
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
   overflow: hidden; 
  margin:24rpx 0 0 46rpx;
}
.header .avatar{
  width:100%;
  height:100%; 
}
.header .uname{
  color:#fff;
}
.nickName{
  margin-left:18rpx;
  padding-top:25rpx;
  text-align: center;
}
.nickName>view{
  height:50rpx;
  color:#fff;
  background: rgba(0,0,0,0.1);
  border-radius: 20rpx;
  line-height: 40rpx;
  margin-top:10rpx;
  padding:5rpx 20rpx;
  font-size: 24rpx;
}
.header button{
  width:244rpx;
  height:70rpx;
  background: #fff;
  color:#DC5147;
  line-height: 70rpx;
  font-size: 28rpx;
  margin:35rpx 32rpx 0 0;
  border-radius:3px;
}

.content>view:not(:first-child){
  width:100%;
}
.content>view:first-child>view{
  width:50%;
  height:92rpx;
  line-height: 92rpx;
  text-align: center;
  background: #FAFAFA;
  border-bottom: 1px solid #E5E5E5;
}
.current{
  color:#DC5147;
  border-bottom: 1px solid #DC5147 !important;
}
.empty>image{
  width:258rpx;
  height:348rpx;
  margin:200rpx 0 0 246rpx;
}
.empty>text{
  display: block;
  margin-top:82rpx;
}
.receive,.give{
  width:100%;
  height: calc(100vh - 232rpx);
  overflow-x: hidden;
  position: relative;
}
.itemView{
  height:180rpx;
  background:#fff;
  border-bottom:1px solid #F4F4F4; 
  position: absolute;
  transition: all .2s ease;
}
.formBtn{
  height:180rpx;
  position: absolute;
  left:0;
  top:0;
  background: transparent;
  z-index: 10;
}
.itemView image{
  width:160rpx;
  height:140rpx;
  border-radius: 10rpx;
  margin:20rpx 0 0 32rpx;
}
.son2{
  margin:10rpx 0 0 20rpx;
}
.son2>text:last-child{
  color:#999999;
  font-size: 24rpx;
}
.son3{
  height:100%;
  width:30%;
  position:absolute;
  top:10rpx;
}
.son3>text:first-child{
  position: absolute;
  top:0;
  right:0;
}
.son3>text:last-child{
  color:#D84E43;
  font-size: 24rpx;
  position: absolute;
  top:100rpx;
  right:0;
}
.son4{
  height:100%;
  background:#DC5147; 
  color:#fff;
  font-size: 36rpx;
  line-height: 180rpx;
  text-align: center;
  box-sizing: border-box;
  transition: all .2s linear;
}
.son5{
  width:280rpx;
  height:100rpx;
  background: #fff;
  box-shadow: 0px 0px 10px #999999;
  position: absolute;
  bottom:-50rpx;
  left:50%;
  z-index:20;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
}
.itemView .title{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 100rpx;
}
.black{
  color:#999 !important;
}