/* 文字输入框 */
.textarea-page{
    position: relative;
    width:100vw;
    height:100vh;
    background:#fffdf5;
    padding:32rpx;
}
.textarea-page textarea{
    width:100%;
    box-sizing: border-box;
    padding:24rpx;
    height:300rpx;
    background:#fff;
    border-radius:10px;
    line-height: 50rpx;
    font-size:36rpx;
    border:1px solid #f0f0f0;
    color:#333;
}
.textarea-page .btn {
    width:100%;
    height:96rpx;
    line-height: 96rpx;
    color:#fff;
    text-align: center;
    margin-top:64rpx;
    background:rgba(216,78,67,1);
    border-radius:20rpx;
}