/* 授权模板 */
@import "../../templates/auth/auth.wxss";
page{
    color:#D84E43;
    background:#FFFDF5;
    box-sizing: border-box;
    position: relative;
    width:100vw;
    font-family:PingFangSC-Medium;
}
.letter-con{
    width:100vw;
    position: absolute;
    top:0;
    left: 0;
    transition:all 1s;
}
.top-pic .top-lamp{
    width:100vw;
    height:94rpx;
    position: absolute;
    top: 0;
    left:0;
    z-index: -1;
}
.block{
    position: relative;
}
.top-pic{
    width:100%;
    height:51.575vh;
    padding-top:24rpx;
    position: relative;
}
.top-pic image{
    display: block;
    width:100%;
    height: 100%;
}
.header{
    height: 9.784vh;
    font-weight: 900;
    line-height: 9.784vh;
}
.title{
    position: absolute;
    top:60rpx;
    left:56rpx;
    font-size: 34rpx;
    color:#333;
    font-weight: 600;
}
.sent-num{
    color:#999;
    font-size: 24rpx;
    line-height: 42rpx;
    font-weight: 100;
}
/* 下面部分 */
.price{
    font-size: 40rpx;
    color:#D0021B;
}
.header .counter-box{
    margin-left:34rpx;
}
.main{
    font-size: 28rpx;
    padding:0 52rpx;
    height:48.425vh;
    overflow: hidden;
}
.header .lf text{
    text-align: center;
    width:52rpx;
    height:52rpx;
    line-height: 52rpx;
    border-radius:4px;
    font-size: 28rpx;
    border:1px solid rgba(0,0,0,0.15);
}
.header .lf text:nth-child(2){
    margin:0 16rpx;
    color:#fff;
    background: #D84E43;
}
.header .counter-box text{
    display: inline-block;
}
.sale-status{
    position: relative;
    width:124rpx;
    height:4.64vh;
    margin-top:2.572vh;
    border-radius:8rpx;
    border:1px solid rgba(216,78,67,1);
}
.sale-status view{
    position: absolute;
    top:-2rpx;
    left:-2rpx;
    width:124rpx;
    height:4.64vh;
    z-index: 1;
    /* background:yellow; */
}
.sale-status button{
    color:#D84E43;
    font-weight: 100;
    line-height: 4.64vh;
    width:100%;
    padding:0;
    border:0;
    height: 100%;
    font-size: 24rpx;
}
.body{
    height: 19.237vh;
    width:100%;
    overflow: hidden;
    position: relative;
}
.body .body-bj{
    position: absolute;
    height: 100%;
    width:100%;
    z-index: -1;
}
.body .content{
    /* background: rgb(255,249,221); */
    overflow: hidden;
    position: relative;
    width:100%;
    height: 100%;
    font-weight: 100;
    padding-top:.9vh;
    line-height: 5.6vh;
}
.body textarea,.body .textarea1{
    width:100%;
    height:12vh;
    display: block;
    overflow: hidden;
    font-size:28rpx;
    overflow: hidden;
    box-sizing: border-box;
    padding: 0 40rpx;
    -web-kit-appearance:none;
}
.textareaShow{
    display: none !important;
}
.body .from{
    position: absolute;
    bottom:1.2vh;
    right: 0;
    padding-right:40rpx;
    height: 6vh;
    max-width: 100%;
    overflow: hidden;
    text-align: right;
    white-space: nowrap;
    color:#B14E1F;
    text-overflow: ellipsis;
    font-size: 24rpx;
    line-height: 3vh;
}
.placeholder{
    position: absolute;
    top:0;
    margin-top:.9vh;
    left: 40rpx;
    color:#B14E1F;
}
/* 底部 */
.footer{
    font-family:PingFangSC-Medium;
    position: relative;
    margin-top:2.488vh;
}
.footer view,.footer button{
    width:100%;
    height:7.96vh;
    line-height: 7.96vh;
    text-align: center;
    margin:0 auto;
    border-radius:20rpx;
    font-size: 36rpx;
    color:#fff;
    background:#D84E43;
}
.footer .to-pay{
    background:rgba(216,78,67,1);
    color:#fff;
}
/* 已购买的状态 */
.state2 button{
    color:#fff;
    background: rgba(216,78,67,1);
}
.saled-time{
    height:34rpx;
    text-align: right;
    line-height:34rpx;
    font-size:28rpx;
    font-family:HelveticaNeue-Light;
    color:rgb(249,153,146);
    padding:0 34rpx;
    background:rgb(255,250,250);
}
/* 已打开礼物 */
.footer .accepted{
    color:#fff;
    margin:5.69715vh auto 1.5vh;
    background:#D84E43;
}
/* 已送出 */
.state5 view,.state8 view{
    color:#D84E43;
    background:#fff;
    border:1px solid #D84E43;
}
/* 商品已过期 */
.footer .time-out{
    background:transparent;
    color:#666;
    border:2px solid rgba(5,5,5,0.08);
}
/* 待支付页面 */
.footer .to-home{
    background:transparent;
    text-decoration: underline;
    color:#D84E43;
    border:0;
    font-size: 24rpx;
}
/* 平台费用说明 */
.cost{
    text-align: center;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    line-height:1;
    position: absolute;
    width:100vw;
    bottom:32rpx;
    color:#D84E43;
}
/* 数字动画 */
.ani-counter{
    position: absolute;
    right: 0;
    top:0;
    color: #000;
    font-size: 180rpx;
    font-weight: 900;
    width:400rpx;
    height:400rpx;
    text-align: center;
    line-height: 280rpx;
    transform-origin:center;
    background-image: -webkit-gradient(linear, 0 0, 0 bottom, from(#FFDD51), to(#FF5D00));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke:3rpx #EC540F;
    transform: scale(0.3)
}
.ani-active{
    animation: sizeUp .5s ease-in .1s infinite;
}
@keyframes sizeUp {
    from{
        transform: scale(0.3)
    }
    to{
        transform: scale(1); 
    }
}
.downCvs{
  position: absolute;
  top:16px;
  left:28px;
}
.pic{
  position: absolute;
  top:-9999px;
  left:-9999px;
}
.shadow button{
  width:300rpx;
  height:96rpx;
  background:#D84E43;
  color:#fff;
  font-size: 36rpx;
  line-height: 96rpx;
}
.btns{
  position: absolute;
  left:28px;
}
.downIcon{
  width:84rpx;
  height:60rpx;
  border-radius:10rpx; 
  background: rgba(0,0,0,0.5);
  position: absolute;
  right:28rpx;
  top:34rpx;
}
.downIcon image{
  width:40rpx;
  height:40rpx;
  margin:10rpx 0 0 22rpx;
}
/*领取礼物页面  */

.contentOne {
  width: 100vw;
  height: 100vh;
  background: rgba(138, 54, 54, 1);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10000;
  /* animation: go 3s infinite; */
}

.goimg {
  position: relative;
  top:6vh;
  display: block;
  margin:0 auto;
  width: 656rpx;
  height: 886rpx;
}
image{
  width: 100%;
  height: 100%;
  display: block;
}
.open{
  width: 184rpx;
  height: 184rpx;
  position: absolute;
  top: 500rpx;
  left:240rpx;
  z-index: 2;
}

.txt {
  position: absolute;
  top:95%;
  left:36vw;
  font-size: 12px;
  font-family: PingFangSC-Regular;
  color: rgba(184, 113, 113, 1);
  line-height: 12px;
}
.goaniActive{
  animation: go 1.5s infinite;
}
@keyframes go{
	0% {
	 opacity:1; 
}
100% {
	 opacity:0; 
}
}
/* 请求礼物支付完成的弹窗 */
.askBox{
    position: fixed;
    top:0;
    left:0;
    width:100vw;
    height: 100vh;
    background:transparent;
    z-index: 66;
    color:#333;
    text-align: center;
    line-height: 180rpx;
    font-size: 32rpx;
}
.askBox .content{
    width:600rpx;
    height:300rpx;
    position: absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    margin:auto;
    background:#eee;
}
.askBox button{
    height: 100rpx;
    line-height: 100rpx;
    color:green;
    background:#eee;
}