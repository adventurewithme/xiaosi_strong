/* 用户授权 */
.toast{
    width:100vw;
    height: 100vh;
    overflow: hidden;
    background: rgba(0,0,0,.5);
    position: absolute;
    top:0;
    left:0;
    transition: all ease .3s;
    z-index: 999;
}
.authorize{
    position: fixed;
    z-index: 9;
    width:600rpx;
    height: 332rpx;
    top:0;
    left: 0;
    bottom:0;
    right:0;
    margin:auto;
    border-radius: 10rpx;
}
.toast image{
    position: absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    z-index: -1;
}
.toast .tip{
    font-size: 24rpx;
    font-family:PingFangSC-Regular;
    color:rgb(102,102,102);
    line-height:48rpx;
    margin:34rpx 0 10rpx;
}
.toast .tipCon{
    font-size:32rpx;
    font-family:PingFangSC-Regular;
    color:rgb(51,51,51);
    line-height:48rpx;
}
.toast .confim{
    font-size:32rpx;
    font-family:PingFangSC-Medium;
    color:rgb(216,78,67);
    line-height:90rpx;
    margin-top:30rpx;
    background:transparent;
}