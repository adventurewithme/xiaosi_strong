/* templates/signIn.wxss */

.shadow {
  width: 100%;
  height: 2000rpx;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 120;
  padding: 0 32rpx;
}

.shadow>.modal {
  width: 100%;
  height: 728rpx;
  background: #fff;
  border-radius: 5px;
  margin-top: 25%;
}

.shadow .date {
  width: 100%;
  height: 172rpx;
  background: linear-gradient(127.4deg, rgba(224, 84, 74, 1), rgba(216, 78, 67, 1));
  border-radius: 5px 5px 0 0;
  position: relative;
  padding:32rpx 0; 
}
.date>view:first-child{
  width:calc(85.714% + 56rpx);
  height:2rpx;
  background: #E38179;
  position: absolute;
  top:120rpx;
  left:calc((14.285% - 56rpx)/2);
  z-index: 0;
}
.signItem{
  height:100%;
  text-align: center;
  width:14.285%;
  z-index:1;
  position: relative;
  padding:0;
}
.date-up {
  font-size:20rpx; 
  color:#fff;
  display: block;
  margin:14rpx 0 20rpx 0;
}

.date image {
  width: 56rpx !important;
  height: 58rpx !important;
}

.score {
  margin:0 auto;
  height: 58rpx;
  width: 56rpx;
  background-image: url("data:image/png;base64,");
  background-size:100% 100%;   
  font-size: 20rpx;
  line-height: 58rpx;
  text-align: center;
}

.currentDate {
  background: lightblue !important;
}
/* 签到内容开始  */
.scoreView{
  width:100%;
  padding:56rpx 70rpx 0;
  font-size: 28rpx;
  color:#fff;
}
.signContent .signBtn {
  width: 486rpx;
  height: 96rpx;
  background: rgba(216, 78, 67, 1);
  border-radius: 12rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  color: rgba(255, 255, 255, 1);
  line-height: 96rpx;
  margin-top: 68rpx;
  font-weight: 900;
}

.signBtned {
  width: 486rpx;
  height: 96rpx;
  background: #fff;
  color: rgba(216, 78, 67, 1);
  border-radius: 12rpx;
  border: 1px solid rgba(216, 78, 67, 1);
  line-height: 96rpx;
  margin-top: 50rpx;
  font-weight: 900;
}

 .integralContent{
  position: relative;
  top:56rpx;
  color:#fff; 
}
.integralContented{
  position: relative;
} 
.signScore{
  width:468rpx;
  height:280rpx;
  margin:0 auto;
  text-align: center;
}
.signImg{
  position: absolute;
  top:0;
  left:0;
}
.signMsg{
  padding-top:40rpx;
}
.integral {
  font-size: 40rpx;
}

.number {
  font-size: 144rpx;
  line-height: 164rpx;
}

.signedScore{
  width:226rpx;
  height:280rpx;
  text-align: center;
}
.signedScore image{
  border-radius:10rpx; 
}

.cardLeft{
   padding-top:calc((100% - 100rpx)/2); 
}
.numbered {
  font-size: 60rpx;
}

.exchange {
  font-size: 20rpx;
  color: rgba(216, 78, 67, 1);
  width:calc(100% - 452rpx);
  text-align: center;
  margin-top:112rpx; 
}

.signContent .icon {
  width: 56rpx;
  height: 24rpx;
}

.integralNUm {
  color: rgba(51, 51, 51, 1);
  padding-top:24rpx;
}

.exchangeBtn {
  width: 164rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 12px;
  font-family: PingFangSC-Medium;
  color: rgba(255, 255, 255, 1);
  background: rgba(216, 78, 67, 1);
  border-radius: 8rpx;
  margin:64rpx auto;
}
